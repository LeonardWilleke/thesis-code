<?xml version="1.0"?>

<precice-configuration>

  <log>
    <sink type="stream" output="stdout"  filter= "%Severity% > debug" format="preCICE:%ColorizedSeverity% %Message%" enabled="true" />	
  </log>

  <solver-interface dimensions="2" >
   
    <data:vector name="Velocity"  />
    <data:vector name="VelocityGradient"  />

    <mesh name="Mesh-Controller">
      <use-data name="Velocity" />
      <use-data name="VelocityGradient" />
    </mesh>

    <mesh name="Mesh-Fluid">
      <use-data name="Velocity" />
      <use-data name="VelocityGradient" />
    </mesh>

    <participant name="Controller">
      <use-mesh name="Mesh-Controller" provide="yes"/>
      <write-data name="Velocity" mesh="Mesh-Controller" />
      <read-data name="VelocityGradient" mesh="Mesh-Controller" />
    </participant>

    <participant name="Fluid">
      <use-mesh name="Mesh-Controller" from="Controller"/>
      <use-mesh name="Mesh-Fluid" provide="yes"/>
      <mapping:nearest-neighbor direction="read"  from="Mesh-Controller" to="Mesh-Fluid" constraint="consistent" />
      <mapping:nearest-neighbor direction="write"  from="Mesh-Fluid" to="Mesh-Controller" constraint="consistent" />
      <read-data  name="Velocity" mesh="Mesh-Fluid" />
      <write-data  name="VelocityGradient" mesh="Mesh-Fluid" />
    </participant>

    <m2n:sockets from="Controller" to="Fluid" exchange-directory="../"/>

    <coupling-scheme:serial-explicit> 
      <participants first="Controller" second="Fluid" /> 
      <max-time value="2" />
      <time-window-size value="0.05" />
      <exchange data="Velocity" mesh="Mesh-Controller" from="Controller" to="Fluid"/>
      <exchange data="VelocityGradient" mesh="Mesh-Controller" from="Fluid" to="Controller"/>
    </coupling-scheme:serial-explicit>                        
  </solver-interface>

</precice-configuration>
